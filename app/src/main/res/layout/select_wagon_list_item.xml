<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="20dp"
    android:paddingStart="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/carIVCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/carIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_bg"
            android:padding="5dp"
            android:src="@drawable/ic_small_car_selector" />

    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/carNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:fontFamily="@font/unineuebold"
        android:text="@string/small_car"
        android:textAllCaps="true"
        android:textColor="@color/darkText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carIVCard" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/carPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:fontFamily="@font/unineuebold"
        android:text="KD 124.56"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textColor="@color/darkText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carNameTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/carWeightLimitTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:fontFamily="@font/unineuebold"
        android:gravity="center"
        android:textSize="10sp"
        android:text="@string/smallcar_weight_limit"
        android:textColor="@color/darkText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carPriceTV" />

    <ImageView
        android:id="@+id/carInfoIV"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_info"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/carWeightLimitTV"
        app:layout_constraintStart_toEndOf="@+id/carWeightLimitTV"
        app:layout_constraintTop_toTopOf="@+id/carWeightLimitTV" />


</androidx.constraintlayout.widget.ConstraintLayout>