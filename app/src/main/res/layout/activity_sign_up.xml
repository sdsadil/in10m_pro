<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signUpPhaseContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.signup.SignUpActivity">

    <com.in10mServiceMan.ui.activities.signup.NonSwipeableViewPager
        android:id="@+id/signUpPhaseViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.in10mServiceMan.ui.activities.signup.NonSwipeableViewPager>

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/signUpPhaseViewPagerIndicator"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="40dp"
        app:dotsColor="@color/md_grey_400"
        app:dotsCornerRadius="7dp"
        app:dotsSize="8dp"
        app:dotsSpacing="4dp"
        app:dotsStrokeWidth="1dp"
        app:selectedDotColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/signUpPhaseViewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>