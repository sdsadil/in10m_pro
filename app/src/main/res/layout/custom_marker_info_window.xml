<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/infoWindowImageIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_dummy_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.in10mServiceMan.widgets.CustomRegularTextView
            android:id="@+id/infoWindowNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Company Serviceman"
            app:layout_constraintStart_toEndOf="@+id/infoWindowImageIV"
            app:layout_constraintTop_toTopOf="@+id/infoWindowImageIV" />

        <com.in10mServiceMan.widgets.CustomRegularTextView
            android:id="@+id/infoWindowServiceNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Service name"
            app:layout_constraintBottom_toBottomOf="@+id/infoWindowImageIV"
            app:layout_constraintStart_toEndOf="@+id/infoWindowImageIV" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>