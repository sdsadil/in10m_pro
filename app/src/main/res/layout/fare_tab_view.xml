<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/vehicleIV"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_small_car"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/vehicleNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/small_car"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:textColor="@color/tab_text_selector"
        app:fontFamily="@font/unineuebold"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/vehicleIV"/>

</androidx.constraintlayout.widget.ConstraintLayout>