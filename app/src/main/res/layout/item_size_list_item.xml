<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemIVCard"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/itemIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_bg"
            android:padding="12dp"
            android:src="@drawable/ic_small_selector" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/itemIVCard"
        app:layout_constraintEnd_toEndOf="@+id/itemIVCard"
        app:layout_constraintTop_toBottomOf="@+id/itemIVCard"
        android:text="Extra Help"
        android:gravity="center"
        android:textColor="@color/darkText"
        android:textSize="13sp"
        android:layout_marginTop="3dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>