<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:elevation="3dp"
        android:foregroundGravity="center"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_back"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/button_close">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_placeholder_firstScreen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/second_screen" />

            <TextView
                android:id="@+id/txt_view_we_have"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/unineuebold"
                android:gravity="center"
                android:text="@string/intro_heading_two"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_15sdp" />

            <com.in10mServiceMan.widgets.CustomRegularTextView
                android:id="@+id/txt_view_our_expert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:text="@string/intro_info_two"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@android:color/holo_red_dark"
                android:gravity="center"
                android:orientation="horizontal" />


        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="10dp"
            android:alpha=".5"
            android:visibility="gone"
            android:background="@color/greenyBlue" />

       <!-- <Button
            android:id="@+id/button"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="10dp"
            android:text="Sign up"
            app:fontFamily="@font/unineueregular"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:background="@color/intro_layout_button" />-->

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>